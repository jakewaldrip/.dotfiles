{
  "$schema": "https://opencode.ai/config.json",
  "theme": "everforest",
  "autoupdate": true,
  "keybinds": {
    "session_child_cycle": "<leader>right",
    "session_child_cycle_reverse": "<leader>left"
  },
  "mcp": {
    "linear-mcp": {
      "type": "local",
      "command": ["npx", "-y", "mcp-remote", "https://mcp.linear.app/sse"],
    },
    "graphite": {
      "type": "local",
      "command": ["gt", "mcp"],
      "enabled": true
    }
  }
}
